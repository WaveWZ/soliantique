@model List<SoliAntique.Models.CartItem>

@{
    ViewData["Title"] = "Sepetiniz";
    Layout = "_Layout";
}

<div class="container py-5">
    <h2 class="mb-4">Your Cart</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-warning">Your cart is empty.</div>
    }
    else
    {
        <div class="row">
            <div class="col-lg-8">
                @foreach (var item in Model)
                {
                    <div class="card shadow-sm mb-4 border-0">
                        <div class="row g-0">
                            <div class="col-md-5">
                                <img src="@item.ImageUrl" class="img-fluid rounded-start" style="height: 300px; object-fit: cover; contain;" alt="@item.Title" />
                            </div>
                            <div class="col-md-7">
                                <div class="card-body">
                                    <h4 class="card-title">@item.Title</h4>
                                    <p class="card-text mb-2"><strong>Price:</strong> $@item.Price</p>
                                    <p class="card-text mb-2"><strong>Quantity:</strong> @item.Quantity</p>
                                    <form asp-controller="Cart" asp-action="RemoveFromCart" method="post">
                                        <input type="hidden" name="ProductId" value="@item.ProductId" />
                                        <input type="hidden" name="ProductType" value="@item.ProductType" />
                                        <button type="submit" class="btn btn-outline-danger btn-sm">ðŸ—‘ Remove Product</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="col-lg-4">
                <div class="card p-4 bg-light border-0 shadow-sm">
                    <h5 class="mb-3">Sum</h5>
                    <h4 class="text-success">$@Model?.Sum(x => x.Price * x.Quantity)</h4>
                    <hr />

                    <p class="cart-note mt-3 text-success">
                        <i class="bi bi-truck"></i> Free shipping
                    </p>
                    <p class="cart-note text-secondary text-warning">
                        <i class="bi bi-shield-lock"></i> 100% Secure Checkout
                    </p>
                    <p class="cart-note text-secondary text-info">
                        <i class="bi bi-shield"></i> Fast Shipping
                    </p>

                    <div class="payment-icons mt-3 mb-3">
                        <i class="bi bi-credit-card-fill"></i>
                        <i class="bi bi-paypal"></i>
                    </div>

                    <a href="/Checkout" class="btn btn-success btn-lg w-100 mt-3">ðŸ›’ Buy</a>
                </div>
            </div>
        </div>
    }
</div>