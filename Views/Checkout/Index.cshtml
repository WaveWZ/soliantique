@model List<SoliAntique.Models.CartItem>

@{
    ViewData["Title"] = "Checkout";
    Layout = "_Layout";
    var totalPrice = Model != null ? Model.Sum(x => x.Price * x.Quantity) : 0;
}

@section Styles {
    <style>
        .checkout-container h4 {
            font-weight: 600;
            color: #343a40;
        }

        .checkout-container .form-label {
            font-weight: 500;
        }

        .checkout-container input,
        .checkout-container textarea {
            border-radius: 8px;
        }

        .checkout-container .card {
            border: none;
            border-radius: 12px;
        }

        .payment-icons i {
            font-size: 1.8rem;
            margin-right: 10px;
        }

        .summary-box {
            background-color: #f8f9fa;
            border-radius: 10px;
            padding: 15px;
        }

        .summary-box h5 {
            font-weight: 600;
        }
    </style>
}

<div class="container py-5 checkout-container">
    <h2 class="mb-5 text-center fw-bold">Secure Checkout</h2>

    <div class="row g-4">
        <div class="col-md-6">
            <div class="card p-4 shadow-sm">
                <h4 class="mb-4">Billing Information</h4>
                <form>
                    <div class="mb-3">
                        <label class="form-label">Full Name</label>
                        <input type="text" class="form-control" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Phone Number</label>
                        <input type="text" class="form-control" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">City</label>
                        <input type="text" class="form-control" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">District</label>
                        <input type="text" class="form-control" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Address</label>
                        <textarea class="form-control" rows="3" required></textarea>
                    </div>
                </form>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card p-4 shadow-sm">
                <h4 class="mb-4">Payment Details</h4>
                <form>
                    <div class="mb-3">
                        <label class="form-label">Cardholder Name</label>
                        <input type="text" class="form-control" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Card Number</label>
                        <input type="text" class="form-control" required>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label class="form-label">Expiration Date</label>
                            <input type="text" class="form-control" required>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">CVV</label>
                            <input type="text" class="form-control" required>
                        </div>
                    </div>

                    <div class="summary-box mt-4">
                        <h5>Total: <span class="text-success">$@totalPrice</span></h5>
                        <p class="text-muted mt-2 mb-1">
                            <i class="bi bi-truck"></i> Free Shipping Included
                        </p>
                        <p class="text-muted mb-1">
                            <i class="bi bi-lock-fill"></i> 100% Secure & Encrypted
                        </p>
                        <div class="payment-icons mt-2">
                            <i class="bi bi-credit-card-fill text-primary"></i>
                            <i class="bi bi-paypal text-info"></i>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-success btn-lg w-100 mt-4">Complete Payment</button>
                </form>
            </div>
        </div>
    </div>
</div>
