@model List<SoliAntique.Models.TurkishCarpet>
@{
    ViewData["Title"] = "Turkish Carpets";
    Layout = "_Layout";
}

<h2>Turkish Carpets</h2>
<div class="row g-4">
@foreach (var carpet in Model)
{
    <div class="col-md-4">
        <a href="/Turkish/Details/@carpet.Id" class="text-decoration-none text-dark">
            <div class="card h-100 shadow-sm border-0">
                <div style="height: 350px; overflow: hidden;">
                    <img src="@carpet.Images.FirstOrDefault()?.ImageUrl" style="width:100%; height:100%; object-fit:contain;" />
                </div>
                <div class="card-body">
                    <h5 class="card-title">@carpet.Title</h5>
                    <p class="card-text">@carpet.Dimensions</p>
                    <p class="h6">$@carpet.Price</p>
                </div>
            </div>
        </a>
    </div>
}
</div>
