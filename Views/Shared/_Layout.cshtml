<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Soli Antique</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    @RenderSection("Styles", required: false) 
    <style>
        body, html { margin: 0; padding: 0; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; }
        #video-section { position: relative; height: 100vh; overflow: hidden; }
        #bg-video { width: 100%; height: 100%; object-fit: cover; position: absolute; top: 0; left: 0; z-index: -1; }
        .category-card { position: relative; overflow: hidden; border-radius: 10px; }
        .category-title { position: absolute; top: 20px; left: 20px; background-color: rgba(0, 0, 0, 0.7); color: #fff; padding: 8px 12px; border-radius: 6px; font-size: 1.25rem; }
        footer { background-color: #b7b7b7; text-align: center; padding: 10px 0; }
    </style>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
</head>
<body>
    @if (ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" &&
        ViewContext.RouteData.Values["Action"]?.ToString() == "Index")
    {
        <section id="video-section">
        <video autoplay muted loop id="bg-video">
            <source src="/video/video.mp4" type="video/mp4">
        </video>

        <nav class="navbar navbar-expand-lg navbar-dark px-4 shadow-sm" style="background-color: rgba(0, 0, 0, 0.2);">
            <a class="navbar-brand" href="/Home/Index">
                <img src="/img/logo/logo.png" alt="Soli Antique" style="height: 40px;" />
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item"><a class="nav-link" href="/">Main Page</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Vintage">Vintage</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Turkish">Turkish</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Iranian">Iranian</a></li>
                    <li class="nav-item"><a class="nav-link" href="/About">About</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Contact">Contact</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Cart">Cart</a></li>
                </ul>
            </div>
        </nav>
        </section>
    }
    else
    {
        <nav class="navbar navbar-expand-lg navbar-dark px-4 shadow-sm" style="background-color: rgba(0, 0, 0, 0.9);">
            <a class="navbar-brand" href="/Home/Index">
                <img src="/img/logo/logo.png" alt="Soli Antique" style="height: 40px;" />
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item"><a class="nav-link" href="/">Main Page</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Vintage">Vintage</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Turkish">Turkish</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Iranian">Iranian</a></li>
                    <li class="nav-item"><a class="nav-link" href="/About">About</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Contact">Contact</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Cart">Cart</a></li>
                </ul>
            </div>
        </nav>
    }

    <main class="container py-5">
        @RenderBody()
    </main>
<footer style="background-color: #B0A997;" class="text-dark text-lg-start mt-3">
  <div class="container py-3">
    <div class="row align-items-center">
      <div class="col-md-6 text-center text-md-start mb-3 mb-md-0">
        <p class="mb-2 fw-semibold">Soli Antique 2025 ® | Designed by Mehmet Ali Aksoy</p>
        <p class="mb-2 fw-semibold">Contact us:</p>
        <a href="https://www.facebook.com" class="me-3 text-dark" target="_blank"><i class="bi bi-facebook" style="font-size: 1.5rem;"></i></a>
        <a href="https://www.instagram.com" class="me-3 text-dark" target="_blank"><i class="bi bi-instagram" style="font-size: 1.5rem;"></i></a>
        <a href="https://www.youtube.com" class="text-dark" target="_blank"><i class="bi bi-youtube" style="font-size: 1.5rem;"></i></a>
      </div>


      <div class="col-md-6 text-center text-md-end">
        <p class="mb-1"><i class="bi bi-geo-alt-fill me-2"></i>Halı Sokak No:17, Kadıköy / İstanbul</p>
        <p class="mb-3"><i class="bi bi-telephone-fill me-2"></i>+90 (212) 345 67 89</p>

        <div class="d-inline-flex align-items-center gap-3">
          <img src="https://img.icons8.com/color/48/000000/visa.png" alt="Visa" height="32">
          <img src="https://img.icons8.com/color/48/000000/mastercard.png" alt="MasterCard" height="32">
        </div>
      </div>
    </div>
  </div>
</footer>



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
